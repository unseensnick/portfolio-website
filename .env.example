# PayloadCMS Configuration
PAYLOAD_SECRET=your-32-character-secret-key-here
DATABASE_URI=postgresql://username:password@localhost:5432/portfolio

# Site URLs
# Production site URL (used in production)
NEXT_PUBLIC_PAYLOAD_URL=your-domain

# Email Configuration (Optional - for password resets)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Portfolio Website
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Demo Mode Configuration (Optional - for showcasing)
# Set to "true" to use demo data instead of PayloadCMS data
NEXT_PUBLIC_DEMO_MODE=false