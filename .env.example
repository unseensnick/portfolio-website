# PayloadCMS Configuration
PAYLOAD_SECRET=your-32-character-secret-key-here
DATABASE_URI=postgresql://username:password@localhost:5432/portfolio

# Site URLs
# Production site URL (used in production)
NEXT_PUBLIC_SITE_URL=your-domain

# Local development URL (used in development when ports/addresses change)
LOCAL_DEV_URL=your-dev-address:port

# Email Configuration (Optional - for password resets and notifications)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Portfolio Website
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password